    <!--<script src="/js/main.js"></script>-->
    <script src="/js/app.js"></script>
    <script src="/js/AddTeamController.js"></script>
    <script src="/js/AddVideoController.js"></script>
    <script src="/js/CoachingToolsController.js"></script>
    <script src="/js/HomeController.js"></script>
    <script src="/js/PublicController.js"></script>
    <script src="/js/RankingsController.js"></script>
