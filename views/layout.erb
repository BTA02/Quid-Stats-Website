    <script src="/js/ViewStatsController.js"></script>
    <script src="/js/ViewStatsControllerExp.js"></script>
    <!--<script src="/js/"></script>-->
    
  </head>

  <body ng-controller="<%= @controllerName %> as controller">
    <snap-drawer>
      <h4 class="username"><%= h(session[:username]) || 'Please Login' %></h4>
      <ul class="nav">
        <li><a href="/">Home</a></li>
        <li><a href="/coaching">Coaching Tools</a></li>
        <li><a href="/record">Record Stats</a></li>
        <li><a href="/full_stats_view">View Stats</a></li>
        <li><a href="/watch">Watch a Game</a></li>
        <li><a href="/add_team">Add / Edit a Roster</a></li>
        <li><a href="/add_video">Add a Video</a></li>
        <li snap-close onclick = "document.getElementById('helpText').style.display='block';document.getElementById('fade').style.display='block'"><a href="">Help</a></li>
      </ul>
    </snap-drawer>
    <snap-content>
      <header>
        <div class="pageHeader">
          <span class="openNav" snap-toggle="">Toggle Nav</span>
          <span class="pageTitle"><%= @title %></span>
          <span class="siteName">QuidStats</span>
        </div>
      </header>
      <%= yield %>
    </snap-content>
    <snap-dragger>
    </snap-dragger>
  </body>
</html>